<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/newsRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/news_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="來自"
            />

    <TextView
            android:id="@+id/new_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:singleLine="false"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/news_form"
            app:layout_constraintTop_toBottomOf="@+id/news_form"
            tools:text="內容"
            app:layout_constraintBottom_toTopOf="@+id/news_publishedAt"/>

    <ImageView
            android:id="@+id/news_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_sun"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/news_publishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@+id/new_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="發布時間"
            app:layout_constraintTop_toBottomOf="@+id/new_content"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="300dp"
            android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>